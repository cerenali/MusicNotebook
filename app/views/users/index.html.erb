<h1>Users#index</h1>

<table>
	<tr>
		<td>name</td>
		<td>password</td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.username, user_path(user.id) %></td>
			<td><%= user.password %></td>
      <td><%= link_to "delete user", user, data: { confirm: 'Are you sure?' }, method: :delete %> </td>
		</tr>
	<% end %>
</table>

<p><%= link_to "Add new user", new_user_path %></p>

<p><%= link_to "View songs", songs_path %></p>

<p><%= link_to "View tags", tags_path %></p>