  <h1>Users#index</h1>

  <table class="table table-hover">
  	<tr>
  		<th>name</th>
      <th>email</th>
      <th>options</th>
  	</tr>
  	<% @users.each do |user| %>
  		<tr>
  			<td><%= link_to user.username, user_path(user.id) %></td>
  			<td><%= user.email %></td>
        <% if current_user == user %>
          <td><%= link_to "delete user", user, data: { confirm: 'Are you sure?' }, method: :delete %> </td>
        <% end %>
  		</tr>
  	<% end %>
  </table>

  <p><%= link_to "Suggested friends", suggested_friends_path %></p>

