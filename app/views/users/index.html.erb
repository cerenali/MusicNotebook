  <h1>All Users</h1>

  <table class="table table-hover">
  	<tr>
  		<th>name</th>
  	</tr>
  	<% @users.each do |user| %>
  		<tr>
  			<td>
          <% if current_user == user %>
            <span class="glyphicon glyphicon-user"></span>
          <% end %>
          <%= link_to user.username, user_path(user.id) %>
        </td>
  		</tr>
  	<% end %>
  </table>

  <p><%= link_to "Suggested friends", suggested_friends_path %></p>