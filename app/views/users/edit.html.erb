  <h1>Edit Your Profile</h1>

  <div class="error-msg">
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %> 
  </div>

  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %></div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <% if current_user == user %>
      <p><%= link_to "delete user", user, data: { confirm: 'Are you sure?' }, method: :delete %> </p>
    <% end %>
  <% end %>