  <h1>Users#new</h1>

  <div class="error-msg">
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %> 
  </div>

  <%= form_for(@user) do |f| %>
  	<div class="field">
  		<p>username</p>
  		<%= f.text_field :username %>
  	</div>
    <div class="field">
      <p>email</p>
      <%= f.text_field :email %>
    </div>
  	<div class="field">
  		<p>password</p>
  		<%= f.text_field :password %>
  	</div>
  	<div class="actions">
  		<%= f.submit %>
  	</div>
  <% end %>
