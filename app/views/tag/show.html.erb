<h1>Songs Tagged as <%= @tag.name %></h1>
<% if @songs.count > 0 %>
  <table class="table table-hover">
    <tr>
      <th>title</th>
      <th>artist</th>
    </tr>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song_path(song) %></td>
        <td><%= song.artist %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>This tag is not associated with any songs.</p>
<% end %>