<div class="container">
  <h1>Tags#index</h1>

  <table class="table table-hover">
  	<tr>
  		<th>title</th>
      <th>options</th>
  	</tr>
  	<% @tags.each do |tag| %>
  		<tr>
        <td><%= link_to tag.title, tag_path(tag.id) %></td>
        <td><%= link_to "delete tag", tag, data: { confirm: 'Are you sure?' }, method: :delete %> </td>
  		</tr>
  	<% end %>
  </table>

  <p><%= link_to "Add new tag", new_tag_path %></p>
  <p><%= link_to "Back to users", users_path %></p>
</div>