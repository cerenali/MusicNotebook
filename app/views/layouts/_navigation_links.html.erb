<%# add navigation links to this file %>

<li>
  <%= link_to songs_path do %>
    <span class="glyphicon glyphicon-music"></span> Songs
  <% end %>
</li>

<li>
  <%= link_to users_path do %>
    <span class="glyphicon glyphicon-user"></span> Users
  <% end %>
</li>

<li>
  <%= link_to tag_index_path do %>
    <span class="glyphicon glyphicon-tags"></span> Tags
  <% end %>

<% if user_signed_in? %>
  <li>
      <%= link_to user_path(current_user.id) do %>
        <span class="glyphicon glyphicon-heart"></span> Favorites
      <% end %>
  </li>
  <li>
    <%= link_to(destroy_user_session_path, :method => :delete) do %>
      <span class="glyphicon glyphicon-off"></span> Logout
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to new_user_session_path do %>
      <span class="glyphicon glyphicon-log-in"></span> Login
    <% end %>
  </li>
  <li>
    <%= link_to new_user_registration_path do %>
      <span class="glyphicon glyphicon-plus"></span> Sign Up
    <% end %>
  </li>
<% end %>

<div class="pull-right">
  <%= form_tag search_path, method: :get, :class => "navbar-form" do %>
    <div class="input-group">
      <%= text_field_tag :search, nil, :class => "form-control", :placeholder => "Add a new song" %>
      <div class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-default") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>