  <h1>Add a New Song</h1>

  <%= form_for(@song) do |f| %>
  	<div class="field">
  		<%= f.label :title %>
  		<%= f.text_field :title, :value => params[:title] %>
  	</div>
  	<div class="field">
  		<%= f.label :artist %>
  		<%= f.text_field :artist, :value => params[:artist] %>
  	</div>
    <div class="field">
      <%= f.label :tags %>
      <%= f.text_field :tag_list, :value => "#{params[:artist]}, #{params[:title]}, ", :class => "tag-box" %>
    </div>
    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url, :value => "https://www.youtube.com/watch?v=#{params[:url]}", :class => "url-box" %>
    </div>
  	<div class="actions">
  		<%= f.submit 'Create', :class => "btn btn-default submit-button" %>
  	</div>
  <% end %>